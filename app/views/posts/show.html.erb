<p id="category">
    <%= @post.title %>
</p>

<hr>

<p>
  <%= @post.content %>
</p>

<div class="row">
  <div class="ml-auto">
    <%= link_to '수정', edit_post_path(@post) %>
    <%= link_to '목록', posts_path %>
    <%= link_to '삭제', @post, method: :delete, data: { confirm: '삭제하면 모든 데이터가 지워집니다. 정말 삭제하시겠습니까?' } %>
  </div>
</div>

<form action="/posts/<%=@post.id%>/comments/create" method="post">
  <label for="content">
    <input type="text" name="content">
  </label>
  <input type="submit">
</form>

<% @comments.each do |comment| %>
  <p><%= comment.content %></p>
<% end %>
