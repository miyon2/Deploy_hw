<% if user_signed_in? %>
  <div class="container">
    <div class="row">
      <%= link_to '내정보', edit_user_registration_path, class: "nav-link col" %>
      <%= link_to '로그아웃', destroy_user_session_path, method: :delete, data: { confirm: "Are you sure?" }, class: "nav-link col" %>
    </div>
  </div>
<% else %>
  <div class="container">
    <div class="row">
      <%= link_to "페이스북으로 로그인하기", user_facebook_omniauth_authorize_path, class: "nav-link col"  %>
      <%= link_to '가입하기', new_user_registration_path, class: "nav-link col" %>
      <%= link_to '로그인', new_user_session_path, class: "nav-link col" %>
    </div>
  </div>
<% end %>
